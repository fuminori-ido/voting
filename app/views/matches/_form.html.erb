<%= form_with(model: rec, class: "contents") do |form| %>
  <%= render_messages(rec) %>
  <%= v_select(    form, rec, :event_id,      Event.not_deleted.order(:name).   map{|e|  [e.name,  e.id]}) %>
  <%= v_select(    form, rec, :stage_id,      Stage.not_deleted.order(:name).   map{|s|  [s.name,  s.id]}) %>
  <%= v_select(    form, rec, :rank_slot_id,  RankSlot.not_deleted.order(:name).map{|rs| [rs.name, rs.id]}) %>
  <%= v_text_field(form, rec, :name) %>

  <div class="inline">
    <%= form.submit class: v_button_class %>
  </div>
<% end %>
